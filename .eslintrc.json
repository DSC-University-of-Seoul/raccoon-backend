{
	"env": {
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"extends": ["plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 80,
				"useTabs": true,
				"endOfLine": "auto",
				"singleQuote": true,
				"arrowParens": "always"
			}
		]
	}
}
